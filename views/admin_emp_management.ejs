<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <title>SSBeauty - admin ระบบบริหารพนักงาน</title>
  <script src="https://cdn.tailwindcss.com"></script>

</head>
<body class="bg-gray-50 min-h-screen m-0">
    <%- include('nav_main_admin', { activePage: 'employee', activeTop: 'home' }) %>
    
    <!-- Main Content -->
    <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
        <!-- Page Header -->
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-900">จัดการพนักงาน</h1>
            <p class="text-sm text-gray-600 mt-1">จัดการข้อมูลพนักงานและตารางการทำงาน</p>
        </div>

        <!-- Filter & Actions -->
        <div class="flex justify-between items-start gap-4 mb-6 flex-wrap">
            <div class="flex gap-3 flex-wrap bg-white rounded-lg shadow-sm p-4 flex-1 min-w-[300px]">
                <div class="flex-1 min-w-[250px]">
                    <label class="block text-sm font-medium text-gray-700 mb-2">ค้นหาพนักงาน</label>
                    <input type="text" id="search-input" value="" 
                        class="w-full border border-gray-300 rounded-lg px-4 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent"
                        placeholder="ค้นหาชื่อพนักงาน...">
                </div>
                <div class="flex items-end">
                    <button class="bg-[#A5848F] hover:bg-[#8a6f77] text-white px-6 py-2.5 rounded-lg text-base font-medium transition-colors shadow-sm">
                        ค้นหา
                    </button>
                </div>
            </div>
            <button onclick="openCreateEmployeeModal()" class="bg-[#A5848F] hover:bg-[#8a6f77] text-white p-3 rounded-lg shadow-md transition-all hover:shadow-lg flex items-center gap-2 font-medium">
                <span class="text-2xl">+</span>
                <span class="hidden sm:inline text-base">เพิ่มพนักงาน</span>
            </button>
        </div>
        <!-- Employee List & Detail Panel -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Employee List -->
            <div class="lg:col-span-1 space-y-3">
                <% employees.forEach((employee, index) => { %>
                    <div class="employee-item cursor-pointer" onclick="showEmployeeDetail(<%= index %>)">
                        <div class="bg-white shadow-sm hover:shadow-md transition-shadow rounded-lg p-4 border border-gray-200 group">
                            <div class="space-y-3">
                                <div class="flex items-center gap-3">
                                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#A5848F] to-[#7D5865] flex items-center justify-center text-white font-semibold text-lg">
                                        <%= employee.User.first_name.charAt(0) %>
                                    </div>
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2 mb-1">
                                            <label class="text-sm font-medium text-gray-700">ชื่อ:</label>
                                            <input type="text" value="<%= employee.User.first_name %> <%= employee.User.last_name %>" 
                                                class="employee-name flex-1 border border-gray-300 rounded-lg px-3 py-1.5 text-base bg-gray-50" readonly>
                                        </div>
                                        <div class="flex items-center gap-2">
                                            <label class="text-sm font-medium text-gray-700">ชื่อเล่น:</label>
                                            <input type="text" value="<%= employee.User.nickname || '' %>" 
                                                class="w-24 border border-gray-300 rounded-lg px-3 py-1.5 text-base bg-gray-50" readonly>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <!-- Detail Panel -->
            <div class="lg:col-span-2 bg-white shadow-sm rounded-lg border border-gray-200 p-6" id="rightPanel" style="display: none;">
                <div id="contentDisplay"></div>
            </div>
        </div>

        <!-- Create Employee Modal -->
        <div id="createEmployeeModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4" style="display: none;">
            <div class="bg-white rounded-lg shadow-xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
                <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex justify-between items-center">
                    <h2 class="text-2xl font-bold text-gray-900">เพิ่มพนักงานใหม่</h2>
                    <button onclick="closeCreateEmployeeModal()" class="text-gray-400 hover:text-gray-600 text-3xl leading-none">&times;</button>
                </div>
                <div class="p-6">
                    <form action="/admin/manage-employee/create" method="POST">
                        <!-- Personal Information -->
                        <div class="mb-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">ข้อมูลส่วนตัว</h3>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">ชื่อ <span class="text-red-500">*</span></label>
                                    <input type="text" name="first_name" required
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">นามสกุล <span class="text-red-500">*</span></label>
                                    <input type="text" name="last_name" required
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">ชื่อเล่น</label>
                                    <input type="text" name="nickname"
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">เบอร์โทร</label>
                                    <input type="tel" name="phone"
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Email <span class="text-red-500">*</span></label>
                                    <input type="email" name="email" required
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">รหัสผ่าน <span class="text-red-500">*</span></label>
                                    <input type="password" name="password" required
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                                </div>
                            </div>
                        </div>

                        <!-- Employee Information -->
                        <div class="mb-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">ข้อมูลการทำงาน</h3>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">ตำแหน่ง</label>
                                    <input type="text" name="position"
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">แนะนำตัว</label>
                                    <input type="text" name="bio"
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                                </div>
                            </div>
                        </div>

                        <!-- Role and Salary -->
                        <div class="mb-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">สิทธิ์และค่าตอบแทน</h3>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">กำหนดสิทธิ์ <span class="text-red-500">*</span></label>
                                    <select name="role" required class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                                        <option value="staff">พนักงาน</option>
                                        <option value="admin">ผู้ดูแลระบบ</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">เงินเดือน (บาท)</label>
                                    <input type="number" name="salary" value="0" step="0.01"
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">ค่าคอมมิชชั่น (%)</label>
                                    <input type="number" name="commission_rate" value="0" step="0.01"
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                                </div>
                            </div>
                        </div>

                        <!-- Schedule -->
                        <div class="mb-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">ตารางงาน</h3>
                            <div class="bg-gray-50 p-5 rounded-lg">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-base">
                                    <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded">
                                        <input type="checkbox" name="schedule[]" value="monday" class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                        <span>จันทร์ 11.00 - 19.00</span>
                                    </label>
                                    <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded">
                                        <input type="checkbox" name="schedule[]" value="thursday" class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                        <span>พฤหัสบดี 11.00 - 19.00</span>
                                    </label>
                                    <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded">
                                        <input type="checkbox" name="schedule[]" value="tuesday" class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                        <span>อังคาร 11.00 - 19.00</span>
                                    </label>
                                    <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded">
                                        <input type="checkbox" name="schedule[]" value="friday" class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                        <span>ศุกร์ 11.00 - 19.00</span>
                                    </label>
                                    <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded">
                                        <input type="checkbox" name="schedule[]" value="wednesday" class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                        <span>พุธ 11.00 - 19.00</span>
                                    </label>
                                    <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded">
                                        <input type="checkbox" name="schedule[]" value="saturday" class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                        <span>เสาร์ 11.00 - 22.00</span>
                                    </label>
                                    <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded md:col-span-2">
                                        <input type="checkbox" name="schedule[]" value="sunday" class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                        <span>อาทิตย์ 11.00 - 22.00</span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="flex gap-3 pt-4 border-t border-gray-200">
                            <button type="button" onclick="closeCreateEmployeeModal()" class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 px-6 py-2.5 rounded-lg font-medium transition-colors text-base">
                                ยกเลิก
                            </button>
                            <button type="submit" class="flex-1 bg-[#A5848F] hover:bg-[#8a6f77] text-white px-6 py-2.5 rounded-lg font-medium transition-colors shadow-sm text-base">
                                เพิ่มพนักงาน
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>



<script>
    const rightPanel = document.getElementById('rightPanel');
    const contentDisplay = document.getElementById('contentDisplay');
    
    // Employee data array
    const employeesData = [
        <% employees.forEach((employee, index) => { %>
            {
                employeeId: '<%= employee.employee_id %>',
                userId: '<%= employee.user_id %>',
                firstName: '<%= employee.User.first_name %>',
                lastName: '<%= employee.User.last_name %>',
                nickname: '<%= employee.User.nickname || "" %>',
                phone: '<%= employee.User.phone || "ไม่ระบุ" %>',
                email: '<%= employee.User.email || "ไม่ระบุ" %>',
                role: '<%= employee.User.role || "customer" %>',
                position: '<%= employee.position || "" %>',
                bio: '<%= employee.bio || "" %>',
                salary: '<%= employee.salary || 0 %>',
                commissionRate: '<%= employee.commission_rate || 0 %>',
                schedule: '<%= employee.schedule || "" %>'
            }<%= index < employees.length - 1 ? ',' : '' %>
        <% }) %>
    ];

    function showEmployeeDetail(index) {
        const employee = employeesData[index];
        
        // Parse schedule (comma-separated days)
        const scheduleDays = employee.schedule ? employee.schedule.split(',').map(d => d.trim().toLowerCase()) : [];
        
        rightPanel.style.display = 'block';
        contentDisplay.innerHTML = `
            <div class="space-y-6">
                <div>
                    <h2 class="text-xl font-bold text-gray-900 mb-4">ข้อมูลพนักงาน</h2>
                    <div class="bg-gray-50 p-5 rounded-lg space-y-3 text-base">
                        <div class="flex flex-wrap gap-2">
                            <span class="font-medium text-gray-700">ชื่อ:</span>
                            <span class="text-gray-900">${employee.firstName} ${employee.lastName}</span>
                            <span class="ml-4 font-medium text-gray-700">ชื่อเล่น:</span>
                            <span class="text-gray-900">${employee.nickname || 'ไม่ระบุ'}</span>
                        </div>
                        <div class="flex flex-wrap gap-2">
                            <span class="font-medium text-gray-700">เบอร์โทร:</span>
                            <span class="text-gray-900">${employee.phone}</span>
                            <span class="ml-4 font-medium text-gray-700">Email:</span>
                            <span class="text-gray-900">${employee.email}</span>
                        </div>
                        <div class="flex gap-2">
                            <span class="font-medium text-gray-700">ตำแหน่ง:</span>
                            <span class="text-gray-900">${employee.position || 'ไม่ระบุ'}</span>
                        </div>
                        <div class="flex gap-2">
                            <span class="font-medium text-gray-700">แนะนำตัว:</span>
                            <span class="text-gray-900">${employee.bio || 'ไม่มีข้อมูล'}</span>
                        </div>
                    </div>
                </div>
                
                <form action="/admin/manage-employee/update/${employee.employeeId}" method="POST">
                    <input type="hidden" name="user_id" value="${employee.userId}">
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">ตำแหน่ง</label>
                            <input type="text" name="position" value="${employee.position || ''}" 
                                class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">แนะนำตัว</label>
                            <input type="text" name="bio" value="${employee.bio || ''}" 
                                class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">กำหนดสิทธิ์</label>
                            <select name="role" class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                                <option value="customer" ${employee.role === 'customer' ? 'selected' : ''}>ลูกค้า</option>
                                <option value="staff" ${employee.role === 'staff' ? 'selected' : ''}>พนักงาน</option>
                                <option value="admin" ${employee.role === 'admin' ? 'selected' : ''}>ผู้ดูแลระบบ</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">เงินเดือน (บาท)</label>
                            <input type="number" name="salary" value="${employee.salary}" step="0.01"
                                class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">ค่าคอมมิชชั่น (%)</label>
                            <input type="number" name="commission_rate" value="${employee.commissionRate}" step="0.01"
                                class="w-full border border-gray-300 rounded-lg px-3 py-2.5 text-base focus:ring-2 focus:ring-[#A5848F] focus:border-transparent">
                        </div>
                    </div>

                    <div class="mb-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">ตารางงาน</h3>
                        <div class="bg-gray-50 p-5 rounded-lg">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-base">
                                <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded">
                                    <input type="checkbox" name="schedule[]" value="monday" 
                                        ${scheduleDays.includes('monday') ? 'checked' : ''}
                                        class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                    <span>จันทร์ 11.00 - 19.00</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded">
                                    <input type="checkbox" name="schedule[]" value="thursday" 
                                        ${scheduleDays.includes('thursday') ? 'checked' : ''}
                                        class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                    <span>พฤหัสบดี 11.00 - 19.00</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded">
                                    <input type="checkbox" name="schedule[]" value="tuesday" 
                                        ${scheduleDays.includes('tuesday') ? 'checked' : ''}
                                        class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                    <span>อังคาร 11.00 - 19.00</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded">
                                    <input type="checkbox" name="schedule[]" value="friday" 
                                        ${scheduleDays.includes('friday') ? 'checked' : ''}
                                        class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                    <span>ศุกร์ 11.00 - 19.00</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded">
                                    <input type="checkbox" name="schedule[]" value="wednesday" 
                                        ${scheduleDays.includes('wednesday') ? 'checked' : ''}
                                        class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                    <span>พุธ 11.00 - 19.00</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded">
                                    <input type="checkbox" name="schedule[]" value="saturday" 
                                        ${scheduleDays.includes('saturday') ? 'checked' : ''}
                                        class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                    <span>เสาร์ 11.00 - 22.00</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer hover:bg-white p-2 rounded md:col-span-2">
                                    <input type="checkbox" name="schedule[]" value="sunday" 
                                        ${scheduleDays.includes('sunday') ? 'checked' : ''}
                                        class="w-4 h-4 text-[#A5848F] rounded focus:ring-[#A5848F]">
                                    <span>อาทิตย์ 11.00 - 22.00</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="flex gap-3 pt-4">
                        <button type="button" onclick="closeEmployeeDetail()" class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 px-6 py-2.5 rounded-lg font-medium transition-colors text-base">
                            ยกเลิก
                        </button>
                        <button type="submit" class="flex-1 bg-[#A5848F] hover:bg-[#8a6f77] text-white px-6 py-2.5 rounded-lg font-medium transition-colors shadow-sm text-base">
                            บันทึก
                        </button>
                    </div>
                </form>
            </div>
        `;
    }

    function closeEmployeeDetail() {
        rightPanel.style.display = 'none';
    }

    function openCreateEmployeeModal() {
        document.getElementById('createEmployeeModal').style.display = 'flex';
    }

    function closeCreateEmployeeModal() {
        document.getElementById('createEmployeeModal').style.display = 'none';
    }
    
    //filter
    const searchBtn = document.getElementById("search-btn");
    const searchInput = document.getElementById("search-input");
    const employees = document.querySelectorAll(".employee-item");

    searchBtn?.addEventListener("click", () => {
        const searchText = searchInput.value.toLowerCase().trim();
        employees.forEach(employee => {
            const name = employee.querySelector(".employee-name")?.value.toLowerCase() || "";
            if (!searchText || name.includes(searchText)) {
                employee.style.display = "block";
            } else {
                employee.style.display = "none";
            }
        });
    });

</script>

    </main>
</body>
</html>